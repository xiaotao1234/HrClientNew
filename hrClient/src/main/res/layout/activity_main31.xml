<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bz1">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            app:contentScrim="#222222"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.huari.ui.TagCloudView
                android:id="@+id/tag_cloud"
                android:layout_width="match_parent"
                android:layout_height="320sp"
                android:layout_margin="5sp"
                app:autoScrollMode="uniform"
                app:darkColor="#ffffffff"
                app:lightColor="#FF0000"
                app:radiusPercent="0.8"
                app:scrollSpeed="3" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/imageview_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/offline_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.huari.ui.pieLineView
                android:id="@+id/pie_show_precent"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/redius_back" />

            <View
                android:layout_width="1sp"
                android:layout_height="0sp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/redius_back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <com.huari.ui.statisticalGraph
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <com.huari.ui.statisticalGraph
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/file"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/redius_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/orientation_cion" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="单频测向"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/danpin_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/danpin_mem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/danpin_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/redius_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/orientation_cion" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="频谱分析"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pinpu_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pinpu_mem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pinpu_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/redius_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/orientation_cion" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="频段扫描"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pinduan_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pinduan_mem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pinduan_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/file11"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/redius_back"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/orientation_cion" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="音频回放"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/yinpin_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/yinpin_mem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/yinpin_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5sp"
                        android:text="@string/unknow"
                        android:textColor="#AAFFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_weight="1" />
            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="20sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>