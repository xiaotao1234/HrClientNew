<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recorder_item"
    android:layout_width="match_parent"
    android:layout_height="60sp"
    android:background="@drawable/buttton_change_bg"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="100sp"
        android:layout_height="match_parent">
        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#44000000"-->
        <!--android:layout_marginStart="29sp"/>-->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:src="@drawable/circle_bg_month" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#08000000" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInfo_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2019-8-8"
            android:textSize="14sp"
            android:transitionName="shareimage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#11000000" />
    </RelativeLayout>
</LinearLayout>