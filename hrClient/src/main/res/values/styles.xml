<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
   
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextInputAppTheme" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/text_third_title_color</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <color name="text_third_title_color">#60000000</color>
</resources>
